<h1>Editar Película</h1>
<form action="/movies/<%= movie._id %>?_method=PUT" method="POST">
    <div class="mb-3">
        <label for="title" class="form-label">Título</label>
        <input type="text" name="title" id="title" class="form-control" value="<%= movie.title %>" required>
    </div>
    <div class="mb-3">
        <label for="director" class="form-label">Director</label>
        <input type="text" name="director" id="director" class="form-control" value="<%= movie.director %>" required>
    </div>
    <div class="mb-3">
        <label for="releaseYear" class="form-label">Año de Estreno</label>
        <input type="number" name="releaseYear" id="releaseYear" class="form-control" value="<%= movie.releaseYear %>" required>
    </div>
    <div class="mb-3">
        <label for="genre" class="form-label">Género</label>
        <input type="text" name="genre" id="genre" class="form-control" value="<%= movie.genre %>" required>
    </div>
    <div class="mb-3">
        <label for="synopsis" class="form-label">Sinopsis</label>
        <textarea name="synopsis" id="synopsis" class="form-control" required><%= movie.synopsis %></textarea>
    </div>
    <div class="mb-3">
        <label for="duration" class="form-label">Duración (minutos)</label>
        <input type="number" name="duration" id="duration" class="form-control" value="<%= movie.duration %>" required>
    </div>
    <div class="mb-3">
        <label for="coverImage" class="form-label">URL de la Imagen de Portada</label>
        <input type="text" name="coverImage" id="coverImage" class="form-control" value="<%= movie.coverImage %>" required>
    </div>
    <button type="submit" class="btn btn-primary">Actualizar Película</button>
</form>