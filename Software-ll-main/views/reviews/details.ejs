<!-- views/reviews/details.ejs -->
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title mb-4">Detalles de la Reseña</h1>

                    <div class="mb-4">
                        <h5>Información de la Película</h5>
                        <p><strong>Título:</strong> <%= review.movie.title %></p>
                        <p><strong>Director:</strong> <%= review.movie.director %></p>
                        <p><strong>Año:</strong> <%= review.movie.releaseYear %></p>
                    </div>

                    <div class="mb-4">
                        <h5>Información de la Reseña</h5>
                        <p><strong>Usuario:</strong> <%= review.user.name %></p>
                        <p><strong>Puntuación:</strong> <%= review.rating %> / 5</p>
                        <p><strong>Fecha:</strong> <%= new Date(review.createdAt).toLocaleDateString() %></p>
                        <p><strong>Comentario:</strong></p>
                        <p class="border p-3 bg-light"><%= review.comment %></p>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/reviews" class="btn btn-secondary">Volver a la Lista</a>
                        <form action="/reviews/<%= review._id %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('¿Estás seguro de que deseas eliminar esta reseña?')">
                                Eliminar Reseña
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 